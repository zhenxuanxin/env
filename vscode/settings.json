{
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true // 用于替代 "eslint.autoFixOnSave": true,
    },
    "editor.cursorSmoothCaretAnimation": true,
    "editor.fontSize": 18,
    "editor.fontFamily": "Consolas,'Courier New','DejaVu Sans Mono',‘Droid Sans Mono’,Menlo,Monaco,monospace,'Source Code Pro','Ubuntu Mono'",
    "editor.formatOnSave": true,
    "editor.quickSuggestions": {
        "strings": true
    },
    "editor.renderWhitespace": "all",
    "editor.suggestSelection": "first",
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "explorer.confirmDragAndDrop": false,
    "emmet.includeLanguages": {
        "wxml": "html"
    },
    "eslint.alwaysShowStatus": true,
    "eslint.options": {
        "env": {
            "es6": true
        },
        "parserOptions": {
            "ecmaVersion": 6 // or 7,8,9
        },
        "plugins": [
            "html"
        ]
    },
    "eslint.packageManager": "yarn",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "html",
        "vue"
    ],
    "files.associations": {
        "*.cjson": "jsonc",
        "*.wxss": "css",
        "*.wxs": "javascript"
    },
    "files.autoSave": "afterDelay",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "go.autocompleteUnimportedPackages": true,
    "go.formatTool": "gofmt",
    "minapp-vscode.disableAutoConfig": true,
    "phpcs.executablePath": "vendor/bin/phpcs",
    "phpcs.showSources": true,
    "phpcs.standard": "PSR2",
    "python.jediEnabled": false,
    "powermode.enabled": true,
    "prettier.singleQuote": true,
    "prettier.semi": false,
    "terminal.integrated.fontSize": 14,
    "vetur.format.defaultFormatterOptions": {
        "js-beautify-html": {
            // force-aligned | force-expand-multiline
            "wrap_attributes": "force-aligned"
        },
        "prettyhtml": {
            "printWidth": 100,
            "singleQuote": false,
            "wrapAttributes": false,
            "sortAttributes": true
        },
        "prettier": {
            "semi": false,
            "singleQuote": true
        }
    },
    "vim.easymotion": true,
    "vim.foldfix": true,
    "vim.useSystemClipboard": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Default Light+",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    }
}
